<div class="row">
  <div class="col-md-4"></div>    
    <div class="col-md-8">
      <h2>Registered Applications</h2>
    </div>    
<div class="col-md-4"></div>    
</div>

<div class="row">
  <% if current_user %>
    <div class="col-md-10"></div>    
    <div class="col-md-2">
      <%= link_to "Add New App", new_registered_application_path, class: 'btn btn-success user-info' %>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="list-group">
    <% @registered_applications.each do |app| %>
      <div class="col-md-2">
        <%= link_to [app] , method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this app' } do %>
          <i class="glyphicon glyphicon-trash"> </i>
        <% end %>
      </div>
      <div class="col-md-10">
        <%= button_to "#{app.name}: #{app.url}", {action: "show", id: app.id }, method: :get, class: "list-group-item list-group-item-action", style: "{width: 100%;}" %>
      </div>
    <% end %>
  </div>
</div>    
    
    


