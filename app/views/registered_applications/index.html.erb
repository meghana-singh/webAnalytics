<div class="row">
  <div class="col-md-4"></div>    
    <div class="col-md-8">
      <h2>Registered Applications</h2>
    </div>    
<div class="col-md-4"></div>    
</div>
<div class="row">
    <div class="col-md-2"></div>    
    <div class="col-md-6">
      <div class="list-group">
        <% @registered_applications.each do |app| %>
          <%= button_to "#{app.name}: #{app.url}", {action: "show", id: app.id }, method: :get, class: "list-group-item list-group-item-action", style: "{width: 100%;}" %>     
        <% end %>
      </div>
    </div>

    <% if current_user %>
      <div class="col-md-4">
         <%= link_to "Add New App", new_registered_application_path, class: 'btn btn-success user-info' %>
      </div>
    <% end %>
</div>