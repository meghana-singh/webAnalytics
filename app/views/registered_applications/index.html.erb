<div class="row">
  <div class="col-md-4"></div>    
    <div class="col-md-8">
      <h2>Registered Applications</h2>
    </div>    
<div class="col-md-4"></div>    
</div>

<div class="row">
  <% if current_user %>
    <div class="col-md-10"></div>    
    <div class="col-md-2">
      <%= link_to "Add New App", new_registered_application_path, class: 'btn btn-success user-info' %>
    </div>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th class="col-md-6">App Name</th>
        <th class="col-md-6">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @registered_applications.each do |app| %>
      <tr> 
        <td class="col-md-6">
           <%= button_to "#{app.name}: #{app.url}", {action: "show", id: app.id }, method: :get, class: "btn-group btn-group-justified btn btn-default" %>            
        </td>
        <td class="col-md-6">
          <%= link_to [app] , method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this app' } do %>
            <i class="glyphicon glyphicon-trash"> </i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


    
    


